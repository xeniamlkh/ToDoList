<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoList" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>

        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>

        <item name="android:windowBackground">@color/windowBackgroundColor</item>

        <item name="colorError">@color/colorError</item>
        <item name="snackbarStyle">@style/SnackBarBackground</item>
        <item name="snackbarTextViewStyle">@style/SnackBarTextColor</item>
        <item name="android:textViewStyle">@style/TextViewBackground</item>
        <item name="extendedFloatingActionButtonStyle">@style/FloatingActionButtonStyle</item>

        <item name="android:popupMenuStyle">@style/PopupMenuBackground</item>
        <item name="android:itemTextAppearance">@style/ItemTextStyle</item>
        <item name="android:iconTint">@color/colorOnPrimary</item>

        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">1000</item>

    </style>

    <style name="SnackBarBackground" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="SnackBarTextColor" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewBackground" parent="Widget.AppCompat.TextView">
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="TextViewCustomColor" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WarningText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorError</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="CustomDatePickerDialog" parent="@style/Theme.Material3.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/windowBackgroundColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorPrimary</item>
        <item name="android:textColorPrimaryInverse">@color/textColorSecondary</item>
        <item name="android:textColorSecondaryInverse">@color/textColorSecondary</item>
        <item name="android:buttonBarPositiveButtonStyle">
            @style/CustomDatePickerDialog.ButtonStyle
        </item>
        <item name="android:buttonBarNegativeButtonStyle">
            @style/CustomDatePickerDialog.ButtonStyle
        </item>
    </style>

    <style name="CustomDatePickerDialog.ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="NoteItemBackground" parent="CardView">
        <item name="cardBackgroundColor">@color/windowBackgroundColor</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="PopupMenuBackground">
        <item name="android:popupBackground">@color/windowBackgroundColor</item>
        <item name="android:popupElevation">10dp</item>
    </style>

    <style name="ItemTextStyle" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

</resources>